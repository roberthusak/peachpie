{
  "version": "0.2.0-*",

  "packOptions": {
    "tags": [
      "peachpie",
      "runtime"
    ],
    "summary": "Peachpie runtime.",
    "owners": [ "jmisek", "iolevel", "peachpie" ],
    "projectUrl": "https://github.com/iolevel/peachpie"
  },

  "buildOptions": {
    "xmlDoc": true,
    "keyFile": "../../build/StrongKeys/core.snk",
    "nowarn": [ "1591" ]
  },

  "dependencies": {
    "System.Reflection.Emit.Lightweight": "4.0.*",
    "System.Dynamic.Runtime": "4.0.*"
  },
  "frameworks": {
    "netstandard1.6": {
      "imports": "dnxcore50",
      "dependencies": {
        "NETStandard.Library": "1.6.0"
      }
    },
    ".NETFramework,Version=v4.6": {
      "buildOptions": { "define": [ "NET46" ] }
    },
    ".netcoreapp1.0": {
      "dependencies": {
        "Microsoft.NETCore.App": {
          "type": "platform",
          "version": "1.0.0"
        }
      }
    }
  },

  "scripts": {
    "postcompile": [
      "dotnet pack --no-build -c %compile:Configuration% -o ../../.nugs --version-suffix beta"
    ]
  }
}