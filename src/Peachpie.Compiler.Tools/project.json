{
  "version": "0.2.0-*",
  "description": "Command line tool enabling 'php' project compilation.",
  "packOptions": {
    "tags": [
      "dotnet",
      "compile-php"
    ],
    "owners": [ "jmisek", "iolevel", "peachpie" ],
    "projectUrl": "https://github.com/iolevel/peachpie"
  },
  "keywords": [ "dotnet", "peachpie", "php", "compiler" ],
  "buildOptions": {
    "outputName": "dotnet-compile-php",
    "emitEntryPoint": true,
    "keyFile": "../../build/StrongKeys/core.snk"
  },
  "dependencies": {
    "Peachpie.Compiler": "*",
    "Peachpie.App": "*"
  },
  "frameworks": {
    "netcoreapp1.0": {
      "dependencies": {
        "Microsoft.NETCore.App": {
          "type": "platform",
          "version": "1.0.0"
        }
      },
      "imports": [
        "dnxcore50",
        "portable-net45+win81",
        "netstandard1.3"
      ]
    }
  },

  "scripts": {
    // for development purposes; installs the tool so dotnet-compile-php can be used as a tool
    "postcompile": [
      "../../tools/nuget.exe pack ../Peachpie.Compiler.nuspec -o ../../.nugs -version 0.2.0-beta",
      "dotnet pack --no-build -c %compile:Configuration% -o ../../.nugs --version-suffix beta"
    ]
  }
}
